---
import Layout from '../layouts/Layout.astro';

// Services for dropdown
const services = [
  'Residential Electrical',
  'Commercial Electrical',
  'Emergency Services',
  'Lighting Installation',
  'Electrical Repairs',
  'Electrical Inspections',
  'Other'
];
---

<Layout title="Contact Us | Chris Owen Electrical" description="Contact Chris Owen Electrical for professional electrical services in Christchurch. Request a quote or schedule a service.">
  <!-- Page Header -->
  <div class="bg-primary text-white py-12">
    <div class="container">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl max-w-3xl">
        Have a question or need a quote? Fill out the form below and we'll get back to you as soon as possible.
      </p>
    </div>
  </div>

  <div class="container py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div>
        <div class="rounded-lg bg-white shadow-lg overflow-hidden">
          <div class="p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
            
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Full Name*</span>
                  </label>
                  <input 
                    type="text" 
                    name="name" 
                    required 
                    class="input input-bordered w-full focus:border-primary focus:ring-1 focus:ring-primary" 
                  />
                </div>
                
                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Email Address*</span>
                  </label>
                  <input 
                    type="email" 
                    name="email" 
                    required 
                    class="input input-bordered w-full focus:border-primary focus:ring-1 focus:ring-primary" 
                  />
                </div>
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Phone Number</span>
                </label>
                <input 
                  type="tel" 
                  name="phone" 
                  class="input input-bordered w-full focus:border-primary focus:ring-1 focus:ring-primary" 
                />
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Service Type*</span>
                </label>
                <select 
                  name="service" 
                  required 
                  class="select select-bordered w-full focus:border-primary focus:ring-1 focus:ring-primary"
                >
                  <option value="" disabled selected>Select a service</option>
                  <option value="residential">Residential Electrical</option>
                  <option value="commercial">Commercial Electrical</option>
                  <option value="emergency">Emergency Services</option>
                  <option value="lighting">Lighting Solutions</option>
                  <option value="renovations">Renovation & New Build</option>
                  <option value="inspections">Electrical Inspections</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Message*</span>
                </label>
                <textarea 
                  name="message" 
                  required 
                  rows="4" 
                  class="textarea textarea-bordered w-full focus:border-primary focus:ring-1 focus:ring-primary resize-none p-4"
                ></textarea>
              </div>
              
              <div class="form-control">
                <label class="cursor-pointer label justify-start gap-3">
                  <input type="checkbox" required class="checkbox checkbox-primary" />
                  <span class="label-text">I agree to the privacy policy and terms of service</span>
                </label>
              </div>
              
              <button type="submit" class="btn btn-primary w-full py-3">Send Message</button>
            </form>
          </div>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div>
        <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
        
        <div class="space-y-8">
          <div class="flex items-start gap-5 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
            </div>
            <div class="flex-grow px-1">
              <h3 class="text-lg font-semibold mb-2">Phone</h3>
              <p class="text-gray-600 mb-2">Call us for a free quote or to schedule service</p>
              <a href="tel:+64212633349" class="text-primary font-medium hover:underline">021 263 3349</a>
            </div>
          </div>
          
          <div class="flex items-start gap-5 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </div>
            <div class="flex-grow px-1">
              <h3 class="text-lg font-semibold mb-2">Email</h3>
              <p class="text-gray-600 mb-2">Send us an email anytime</p>
              <a href="mailto:info@chrisowenelectrical.com" class="text-primary font-medium hover:underline">info@chrisowenelectrical.com</a>
            </div>
          </div>
          
          <div class="flex items-start gap-5 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-grow px-1">
              <h3 class="text-lg font-semibold mb-2">Business Hours</h3>
              <p class="text-gray-600 mb-2">Monday - Friday: 7:30 AM - 5:00 PM</p>
              <p class="text-gray-600">Emergency services available 24/7</p>
            </div>
          </div>
          
          <div class="flex items-start gap-5 p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            </div>
            <div class="flex-grow px-1">
              <h3 class="text-lg font-semibold mb-2">Location</h3>
              <p class="text-gray-600">Linwood, Christchurch, New Zealand</p>
              <p class="text-gray-600">Serving all of Christchurch and surrounding areas</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Form submission handling
  const form = document.getElementById('contact-form') as HTMLFormElement;
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // In a real implementation, you would send the form data to a server
      // For now, we'll just show a success message
      const formData = new FormData(form);
      console.log('Form submitted:', Object.fromEntries(formData));
      
      // Show success message
      form.innerHTML = `
        <div class="text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-green-500 mx-auto mb-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">Thank You!</h3>
          <p class="text-gray-600 mb-6">Your message has been received. We'll get back to you as soon as possible.</p>
          <button type="button" class="btn btn-primary" onclick="window.location.reload()">Send Another Message</button>
        </div>
      `;
    });
  }
</script> 