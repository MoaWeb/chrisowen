---
import Layout from '../layouts/Layout.astro';
import LazyPlaceholder from '../components/LazyPlaceholder.astro';

// Services data
const services = [
  {
    title: 'Residential Electrical',
    description: 'Complete electrical solutions for your home including installations, repairs, and upgrades.',
    link: '/chrisowen/services#residential'
  },
  {
    title: 'Commercial Electrical',
    description: 'Professional electrical services for businesses, offices, and commercial properties.',
    link: '/chrisowen/services#commercial'
  },
  {
    title: 'Emergency Services',
    description: 'Fast and reliable emergency electrical services available when you need them most.',
    link: '/chrisowen/services#emergency'
  }
];

// Testimonials data
const testimonials = [
  {
    name: 'Caff Duggan',
    text: 'If you are looking for an electrician, Chris Owen is your man! He is knowledgeable, professional, reliable and tidy and his rates are very reasonable.',
    rating: 5
  },
  {
    name: 'Brett D',
    text: 'Chris did some electrical work at our place October 2021. He had great communication, arrived on time and was easy to deal with. Happy with the work and quoted price. Will use again or recommend. Thanks.',
    rating: 5
  },
  {
    name: 'Vicary Toye',
    text: 'Chris recently did a marvellous electrical job for us. He was efficient, prompt and generous with his time and expertise. When we next need an electrician he\'d be our first choice.',
    rating: 5
  },
  {
    name: 'Em Dee (L McMillan)',
    text: 'Mr Owen redid the electrical wiring in my house - did a fantastic job, very tidy worker, good price and was within an excellent time frame - would highly recommend him to anyone looking at electrical work!',
    rating: 5
  },
  {
    name: 'Lisa Clement',
    text: 'Excellent electrician, and affordable.',
    rating: 5
  },
  {
    name: 'Christian Neilson',
    text: '5 stars',
    rating: 5
  }
];
---

<Layout>
  <!-- Hero Section -->
  <section class="relative py-0 h-[500px] lg:h-[600px] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/chrisowen/images/hero_image.jpg" 
        alt="Chris Owen Electrical - Professional electrical services in Christchurch" 
        class="w-full h-full object-cover object-center"
      />
      <div class="absolute inset-0 bg-primary/70"></div>
    </div>
    
    <div class="container relative z-10 h-full flex items-center">
      <div class="w-full lg:w-3/5 text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Professional Electrical Services in Christchurch, New Zealand</h1>
        <p class="text-xl mb-8">Quality workmanship, reliable service, and competitive pricing.</p>
        <div class="flex flex-wrap gap-4">
          <a href="/chrisowen/contact" class="btn btn-secondary">Get a Quote</a>
          <a href="tel:+64212633349" class="btn btn-outline border-white text-white hover:bg-white hover:text-primary">
            Call: 021 263 3349
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-base-100">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Our Services</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          We provide a comprehensive range of electrical services for residential and commercial properties.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow h-full flex flex-col">
            <figure class="h-48 overflow-hidden">
              {index === 0 ? (
                <img 
                  src="/chrisowen/images/residential_services.jpg" 
                  alt="Residential Electrical Services" 
                  class="w-full h-full object-cover"
                  style="image-rendering: -webkit-optimize-contrast; -webkit-backface-visibility: hidden; backface-visibility: hidden; transform: translateZ(0);"
                />
              ) : index === 1 ? (
                <img 
                  src="/chrisowen/images/commercial_services.jpg" 
                  alt="Commercial Electrical Services" 
                  class="w-full h-full object-cover"
                  style="image-rendering: -webkit-optimize-contrast; -webkit-backface-visibility: hidden; backface-visibility: hidden; transform: translateZ(0);"
                />
              ) : (
                <img 
                  src="/chrisowen/images/emergency_services.jpg" 
                  alt="Emergency Electrical Services" 
                  class="w-full h-full object-cover"
                  style="image-rendering: -webkit-optimize-contrast; -webkit-backface-visibility: hidden; backface-visibility: hidden; transform: translateZ(0);"
                />
              )}
            </figure>
            <div class="card-body p-6 md:p-8 flex flex-col flex-grow">
              <h3 class="card-title text-xl font-bold mb-3">{service.title}</h3>
              <p class="flex-grow mb-5 px-1">{service.description}</p>
              <div class="card-actions justify-end mt-auto pt-4 border-t border-gray-100">
                <a href={service.link} class="btn btn-primary mt-2">Learn More</a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/chrisowen/services" class="btn btn-outline btn-primary text-primary hover:text-white">View All Services</a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-primary">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white">Why Choose Us</h2>
        <p class="mt-4 text-xl text-white max-w-3xl mx-auto">
          Chris Owen Electrical is committed to providing high-quality electrical services with integrity and professionalism.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="card bg-white shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-16 h-16 flex items-center justify-center rounded-full bg-secondary/20 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Licensed & Insured</h3>
            <p class="px-1">Fully licensed and insured for your peace of mind.</p>
          </div>
        </div>

        <div class="card bg-white shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-16 h-16 flex items-center justify-center rounded-full bg-secondary/20 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Prompt Service</h3>
            <p class="px-1">We value your time and always arrive on schedule.</p>
          </div>
        </div>

        <div class="card bg-white shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-16 h-16 flex items-center justify-center rounded-full bg-secondary/20 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Quality Work</h3>
            <p class="px-1">Exceptional workmanship and attention to detail.</p>
          </div>
        </div>

        <div class="card bg-white shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-16 h-16 flex items-center justify-center rounded-full bg-secondary/20 text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Customer Focused</h3>
            <p class="px-1">Your satisfaction is our top priority on every project.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-base-100">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">What Our Clients Say</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Don't just take our word for it. Here's what our satisfied customers have to say.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="card bg-base-100 shadow-xl border border-gray-100 h-full flex flex-col">
            <div class="card-body flex flex-col flex-grow p-6 md:p-8">
              <div class="flex mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-500">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                ))}
              </div>
              <div class="flex-grow">
                <p class="italic mb-4 min-h-[60px] px-1">"{testimonial.text}"</p>
              </div>
              <div class="mt-auto pt-5 border-t border-gray-100">
                <p class="font-semibold text-right pt-2">- {testimonial.name}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contact us today for a free quote on your electrical project. We're here to help with all your electrical needs.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/chrisowen/contact" class="btn btn-outline border-white text-white hover:bg-white hover:text-primary">Get a Free Quote</a>
        <a href="tel:+64212633349" class="btn btn-outline border-white text-white hover:bg-white hover:text-primary">
          Call: 021 263 3349
        </a>
      </div>
    </div>
  </section>
</Layout>
