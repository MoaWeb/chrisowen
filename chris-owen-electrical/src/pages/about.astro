---
import Layout from '../layouts/Layout.astro';
import LazyPlaceholder from '../components/LazyPlaceholder.astro';

// Team member data
const teamMember = {
  name: 'Chris Owen',
  position: 'Owner & Master Electrician',
  bio: 'Chris has over 15 years of experience in the electrical industry. He founded Chris Owen Electrical with a commitment to quality workmanship and exceptional customer service.',
  image: '/images/chris.jpg'
};

// Values
const values = [
  {
    title: 'Quality',
    description: 'We never compromise on quality. Every job is completed to the highest standards using premium materials.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
    </svg>`
  },
  {
    title: 'Integrity',
    description: 'We operate with honesty and transparency in all our dealings, providing fair pricing and clear communication.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
    </svg>`
  },
  {
    title: 'Reliability',
    description: 'We show up on time, complete projects on schedule, and stand behind our work with solid guarantees.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    title: 'Safety',
    description: 'Safety is our top priority. We adhere to all safety standards and regulations to protect our clients and team.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
    </svg>`
  }
];
---

<Layout title="About Us | Chris Owen Electrical" description="Learn about Chris Owen Electrical, our team, our values, and our commitment to quality electrical services in Christchurch.">
  <!-- Page Header -->
  <div class="bg-primary text-white py-12">
    <div class="container">
      <h1 class="text-4xl font-bold mb-4">About Us</h1>
      <p class="text-xl max-w-3xl">
        Chris Owen Electrical is a trusted provider of electrical services in Christchurch, committed to quality workmanship and customer satisfaction.
      </p>
    </div>
  </div>

  <!-- Our Story Section -->
  <section class="py-16 bg-primary/90 text-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-6 text-white">Our Story</h2>
          <div class="space-y-4 text-lg text-white">
            <p>
              Chris Owen Electrical was founded in Christchurch with a simple mission: to provide reliable, high-quality electrical services with integrity and professionalism.
            </p>
            <p>
              With over 15 years of experience in the electrical industry, Chris Owen established the company to fill a gap in the market for an electrical contractor that truly puts customers first.
            </p>
            <p>
              Today, we're proud to serve residential and commercial clients throughout Christchurch and the surrounding areas. Our team has grown, but our commitment to quality workmanship and exceptional customer service remains the same.
            </p>
            <p>
              We believe in doing the job right the first time, using quality materials, and standing behind our work. That's why so many of our clients come from referrals and repeat business.
            </p>
          </div>
        </div>
        <div class="rounded-lg overflow-hidden shadow-xl">
          <img 
            src={import.meta.env.BASE_URL + "images/about_our_company.jpg"} 
            alt="About Chris Owen Electrical" 
            class="w-full h-full object-cover"
            style="min-height: 400px; image-rendering: -webkit-optimize-contrast; -webkit-backface-visibility: hidden; backface-visibility: hidden; transform: translateZ(0);"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="py-16 bg-base-200">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Our Values</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          These core values guide everything we do at Chris Owen Electrical.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map(value => (
          <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow h-full">
            <div class="card-body text-center p-6 md:p-8">
              <div class="mx-auto mb-5 w-16 h-16 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Fragment set:html={value.icon} />
              </div>
              <h3 class="text-xl font-bold mb-3">{value.title}</h3>
              <p class="text-gray-600 px-1">{value.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Team Section -->
  <section class="py-16 bg-primary/90 text-white">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white">Meet Chris Owen</h2>
        <p class="mt-4 text-xl text-white max-w-3xl mx-auto">
          Professional electrician with over 15 years of experience serving the Christchurch area.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="rounded-lg overflow-hidden shadow-xl">
          <img 
            src={import.meta.env.BASE_URL + "images/hero_image_cropped.jpg"} 
            alt="Chris Owen - Master Electrician" 
            class="w-full object-cover object-top"
            style="height: 100%; min-height: 400px;"
          />
        </div>

        <div class="flex flex-col space-y-6">
          <div>
            <h3 class="text-2xl font-bold text-white mb-2">Chris Owen</h3>
            <p class="text-xl text-secondary font-medium mb-4">Master Electrician & Owner</p>
          </div>
          
          <div class="space-y-4 text-lg">
            <p>
              With over 15 years of experience in the electrical industry, Chris has developed a reputation for quality workmanship, reliability, and exceptional customer service.
            </p>
            <p>
              As a licensed master electrician, Chris personally oversees every project to ensure it meets the highest standards of quality and safety. His attention to detail and commitment to excellence have earned him a loyal client base throughout Christchurch.
            </p>
            <p>
              Chris founded Chris Owen Electrical with a simple mission: to provide honest, reliable, and professional electrical services that customers can trust. He prides himself on clear communication, fair pricing, and getting the job done right the first time.
            </p>
          </div>

          <div class="flex gap-6 pt-4">
            <a href="/contact" class="btn btn-secondary">Contact Chris</a>
            <a href="/services" class="btn btn-outline border-white text-white hover:bg-white hover:text-primary">View Services</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="py-16 bg-base-200">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Our Certifications</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          We maintain the highest standards of quality and safety through our professional certifications.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-20 h-20 flex items-center justify-center rounded-full bg-primary/10">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Licensed Electricians</h3>
            <p class="text-gray-600 px-1">All our electricians are fully licensed and registered professionals.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-20 h-20 flex items-center justify-center rounded-full bg-primary/10">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Health & Safety Certified</h3>
            <p class="text-gray-600 px-1">We maintain strict health and safety standards on every job.</p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow h-full">
          <div class="card-body text-center p-6 md:p-8">
            <div class="mx-auto mb-5 w-20 h-20 flex items-center justify-center rounded-full bg-primary/10">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-primary">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Fully Insured</h3>
            <p class="text-gray-600 px-1">We carry comprehensive insurance for your peace of mind.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Work With Us?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contact us today to discuss your electrical needs and experience the Chris Owen Electrical difference.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="btn btn-secondary">Get in Touch</a>
        <a href="/services" class="btn btn-outline border-white text-white hover:bg-white hover:text-primary">
          View Our Services
        </a>
      </div>
    </div>
  </section>
</Layout> 