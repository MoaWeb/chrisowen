---
// Define the navigation links
const navItems = [
  { text: 'Home', href: '/chrisowen/' },
  { text: 'Services', href: '/chrisowen/services/' },
  { text: 'About', href: '/chrisowen/about/' },
  { text: 'Gallery', href: '/chrisowen/gallery/' },
  { text: 'Contact', href: '/chrisowen/contact/' },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <span class="text-2xl font-bold text-primary">âš¡ Chris Owen Electrical Ltd</span>
    </a>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="lg:hidden" aria-label="Toggle Menu">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center gap-6">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="font-medium text-gray-700 hover:text-primary transition-colors"
        >
          {item.text}
        </a>
      ))}
      <a href="tel:+64212633349" class="btn btn-primary">
        Call: 021 263 3349
      </a>
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden">
    <nav class="container py-4 flex flex-col gap-4">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="font-medium text-gray-700 hover:text-primary transition-colors"
        >
          {item.text}
        </a>
      ))}
      <a href="tel:+64212633349" class="btn btn-primary w-full">
        Call: 021 263 3349
      </a>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script> 